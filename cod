  "unread_mention": false,
  "read_only": false,
  "not_spam": true,
  "last_message": {
    "id": "string",
    "type": "text",
    "subtype": "string",
    "chat_id": "string",
    "chat_name": "string",
    "from": "string",
    "from_me": true,
    "from_name": "string",
    "source": "text",
    "timestamp": 0,
    "device_id": 0,
    "status": "failed",
    "text": {
      "body": "string",
